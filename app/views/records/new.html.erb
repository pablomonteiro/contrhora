<body>
    <fieldset>
        <div class="panel panel-primary">
            <div class="panel-heading">Cadastro de Registro</div>
            
            <div class="panel-body">
                <%= form_for @record do |f| %>
                    <div class="form-group">
                        <div class="col-md-6">
                            <%= f.label :project, :class => "col-md-2 control-label" %>
                            <%= f.text_field :project, :class => "form-control" %>
                        </div>
                        <div class="col-md-6">
                            <%= f.label :issue, :class => "col-md-2 control-label" %>
                            <%= f.text_field :issue, :class => "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <%= f.label :register, :class => "col-md-12 control-label" %>
                            <%= f.date_select :register, :order => [:day, :month, :year], :class => "form-control"%>
                        </div>
                        <div class="col-md-3">
                            <%= f.label :hour_in, :class => "col-md-12 control-label" %>
                            <%= f.time_field :hour_in, value: "%H:%M", :class => "form-control"%>
                        </div>
                        <div class="col-md-3">
                            <%= f.label :hour_out, :class => "col-md-12 control-label" %>
                            <%= f.time_field :hour_out, value: "%H:%M", :class => "form-control"%>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <%= f.label :comment, :class => "col-md-2 control-label" %> 
                            <%= f.text_area :comment, :class => "form-control" %>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <%= f.label :requester, :class => "col-md-2 control-label" %>
                            <%= f.text_field :requester, :class => "form-control" %>
                        </div>
                        <div class="col-md-6">
                            <%= f.label :user_id, :class => "col-md-2 control-label" %>
                            <%= f.text_field :user_id, :class => "form-control"%>
                        </div>
                    </div>

                    <!-- Button (Double) -->
                    <div class = "form-actions">
                        <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
                    </div>
                <% end %>
            </div>
        </div>  
        
    </fieldset>
</body>
</html>
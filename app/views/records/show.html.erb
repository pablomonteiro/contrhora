<div class="panel-body">
    <div class="row">
        <div class="col-md-3">
            <label><%= t('record.label.project') %></label>
            <%= @record.project %>
        </div>
        <div class="col-md-3">
            <label><%= t('record.label.issue') %></label>
            <%= @record.issue %>
        </div>
        <div class="col-md-3">
            <label><%= t('record.label.register') %></label>
            <%= @record.register.strftime("%d/%m/%Y") %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label><%= t('record.label.hour_in')  %></label>
            <%= @record.hour_in %>
        </div>
        <div class="col-md-2">
            <label><%= t('record.label.hour_out')  %></label>
            <%= @record.hour_out %>
        </div>
        <div class="col-md-2">
            <label><%= t('record.label.time_spent')  %></label>
            <%= @record.time_spent %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <label><%= t('record.label.comment')  %></label>
            <%= @record.comment %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label><%= t('record.label.requester') %></label>
            <%= @record.requester %>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-4 input-group">
        <div class="input-group-prepend">
            <%= f.label :project, class: "input-group-text" %>
        </div>
        <%= f.collection_select :project_id, Project.actives, :id, :name, {include_blank: true}, {class:"custom-select form-control"} %>
    </div>
    <div class="col-4 input-group">
        <div class="input-group-prepend">
            <%= f.label :requester, class: "input-group-text" %>
        </div>
        <%= f.collection_select :requester_id, Requester.actives, :id, :name, {include_blank: true}, {class:"custom-select form-control"} %>
    </div>
    <div class="col-4 input-group">
        <%= f.label :register, class: "input-group-text" %>
        <%= f.date_field :register, class: "form-control"%>
    </div>
</div>

<div class="row mb-4">    
    <div class="col-4 input-group">
        <%= f.label :issue, class: "input-group-text" %>
        <%= f.text_field :issue, class: "form-control", maxlength:"10" %>
    </div>
    <div class="col-4 input-group">
        <%= f.label :hour_in, class: "input-group-text" %>
        <% if @record.new_record? %>
            <%= f.time_field :hour_in, value: "%H:%M", class: "form-control"%>
        <% else %>
            <%= f.time_field :hour_in, value: "#{@record.hour_in}", class: "form-control" %>
        <% end %>
    </div>
    <div class="col-4 input-group">
        <%= f.label :hour_out, :class => "input-group-text" %>
        <% if @record.new_record? %>
            <%= f.time_field :hour_out, value: "%H:%M", class: "form-control"%>
        <% else %>
            <%= f.time_field :hour_out, value: "#{@record.hour_out}", class: "form-control" %>
        <% end %>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12 input-group">
        <%= f.label :comment, class: "input-group-text" %> 
        <%= f.text_area :comment, class: "form-control" %>
    </div>
</div>

<!-- Button (Double) -->
<div class="row">
    <div class="col text-center">
        <%= f.submit t('record.button.save'), class: "btn btn-primary" %>
        <%= link_to t('record.button.cancel'), records_path, class: "btn btn-secondary btn-md" %>
    </div>
</div>
<div class="card-body">
    <div class="container">
        <%= form_with(model: current_user, url: update_password_user_path(locale, current_user), method: "patch") do |f| %>
            <div class="row mb-2">
                <div class="input-group col-12">
                    <div class="input-group-prepend col-3">
                        <label class="input-group-text col-12"><%= f.label :password %></label>
                    </div>
                    <%= f.password_field :password, class: "form-control"  %>
                </div>
                <div class="input-group col-12">
                    <div class="input-group-prepend col-3">
                        <label class="input-group-text col-12"><%= f.label :password_confirmation %></label>
                    </div>
                    <%= f.password_field :password_confirmation, class: "form-control"  %>
                </div>
            </div>
            <div class = "row">
                <div class="col text-center">
                    <%= f.submit t('user.button.save') , class: "btn btn-large btn-primary" %>
                    <%= link_to t('user.button.cancel'), root_path,  class: "btn btn-large btn-secondary"%>
                </div>
            </div>
        <% end %>
    </div>    
</div>
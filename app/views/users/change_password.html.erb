<div class="panel-body">
    <%= form_with(model: current_user, url: update_password_user_path(locale, current_user), method: "patch") do |f| %>
        <div class="form-group">
            <div class="col-md-6">
                <%= f.label :password %>
                <%= f.password_field :password, :class => "form-control"  %>
            </div>
            <div class="col-md-6">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, :class => "form-control"  %>
            </div>
        </div>
        <div class = "form-actions">
            <%= f.submit t('user.change_password.button') , class: "btn btn-large btn-primary" %>
        </div>
    <% end %>
</div>
<div class="row">
    <div class="col-md-12 text-right">
        <%= t 'total_spent_time' %>
        <%= @total_spent_time %>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th><%= t 'record.label.project' %></td>
            <th><%= t 'record.label.user' %></td>
            <th><%= t 'record.label.issue' %></td>
            <th><%= t 'record.label.register' %></td>
            <th><%= t 'record.label.comment' %></td>
            <th><%= t 'record.label.time_spent' %></td>
        </tr>
    </thead>
    <tbody>
        <% @records.each do |record| %>    
            <tr>
                <td><%= record.project.name %></td>
                <td><%= record.user.name %></td>
                <td><%= record.issue %></td>
                <td><%= record.register.strftime("%d/%m/%Y") %></td>
                <td><%= record.comment %></td>
                <td><%= record.time_spent_to_s %></td>
                <td><%= link_to t('record.button.details'), record_path(locale, record) %></td>
                <% if @controller_name == 'records' %>
                    <td><%= link_to t('record.button.edit'), edit_record_path(locale, record) %></td>
                    <td><%= link_to t('record.button.delete'), record_path(locale, record), method: :delete, data: { confirm: t('record.confirmation_delete')  } %></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>